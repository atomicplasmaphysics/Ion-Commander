{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "\n%(asctime)s - %(levelname)-8s - %(message)s (%(filename)s:%(lineno)d)"
    },
    "custom": {
      "()": "Utility.Logger.CustomFormatter"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "WARNING",
      "formatter": "custom",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "../logs/Ion_Commander.log",
      "encoding": "utf8",
      "maxBytes": 10000000,
      "backupCount": 3
    }
  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": [
        "console",
        "file"
      ]
    }
  }
}